{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle",
        "env": {
          "GRADLE_OPTS": "-Xmx4g -XX:MaxMetaspaceSize=1g"
        }
      },
      "channel": "production"
    }
  },
  "submit": {
    "production": {
      "ios": {},
      "android": {}
    }
  }
}
